<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.summoner2.app.MainActivity"
    android:background="@drawable/transferback_2">

    <RadioGroup
        android:id="@+id/radio_region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/find"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/snchangeback02_small">

        <RadioButton
            android:id="@+id/radio_ru"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:text="ru"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radio_euw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:text="euw"
            android:textColor="#ffffffff" />

        <RadioButton
            android:id="@+id/radio_eune"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:text="eune"
            android:textColor="#ffffffff" />

        <RadioButton
            android:id="@+id/radio_na"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="na"
            android:textColorHighlight="#ffffffff"
            android:textColor="#ffffffff" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summoner_name"
        android:layout_marginTop="192dp"
        android:width="@dimen/dialog_fixed_width_minor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@android:color/holo_orange_dark"
        android:text="Vulgrim"
        android:textColor="@android:color/holo_orange_dark"
        android:textIsSelectable="false"
        android:autoText="false"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/find"
        android:layout_below="@+id/summoner_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:clickable="true"
        android:enabled="true"
        android:onClick="findSummoner"
        style="@style/AppTheme"
        android:background="@drawable/unlockbuttoninner"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Region"
        android:id="@+id/textView"
        android:layout_above="@+id/radio_region"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
